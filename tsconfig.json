{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
